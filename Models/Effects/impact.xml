	        <z-min-deg-sec>0</z-min-deg-sec>
	        <x-max-deg-sec>0</x-max-deg-sec>
	        <y-max-deg-sec>0</y-max-deg-sec>
	        <z-max-deg-sec>0</z-max-deg-sec>
	      </rotation-speed>
	    </shooter>
	    
	    <counter>
	      <particles-per-sec>
	        <value>20</value>
	        <spread>4</spread>
	      </particles-per-sec>
	    </counter>
	    
	    <align>billboard</align>
	    
	    <particle>
	      <start>
	        <color>
	          <red>
	            <value>0.8</value>
	          </red>
	          <green>
	            <value>0.8</value>
	          </green>
	          <blue>
	            <value>0.8</value>
	          </blue>
	          <alpha>
	            <value>0.7</value>
	          </alpha>
	        </color>
	        <size>
	          <value>1.7</value>
	        </size>
	      </start>
	      <end>
	        <color>
	          <red>
	            <value>0.5</value>
	          </red>
	          <green>
	            <value>0.5</value>
	          </green>
	          <blue>
	            <value>0.5</value>
	          </blue>
	          <alpha>
	            <value>0.1</value>
	          </alpha>
	        </color>
	        <size>
	          <value>0.01</value>
	        </size>
	      </end>
	      <life-sec>
	        <value>1.0</value>
	      </life-sec>
	      <mass-kg>1.0</mass-kg>
	      <radius-m>0.1</radius-m>
	    </particle>
	    
	    <program>
	      <fluid>water</fluid>
	      <gravity>true</gravity>
	      <wind>false</wind>
	    </program>
	    
	</particlesystem>


</PropertyList>
